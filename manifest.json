{
  "manifest_version": 2,
  "name": "Carbon Footprint",
  "description": "A  Chrome extension that detects Carbon Footprint you left on the internet",
  "version": "1.0.0",
  "icons": {
    "48": "images/icon-48.png"
  },
  "permissions": [
    "storage",
    "webRequest",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "script.js","background.js"
    ]
  },
  "browser_action": {
    "browser_style": true,
    "default_popup": "popup.html",
    "default_icon": {
        "48": "images/icon-48.png"
    }
  },
  "default_locale": "en",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';"
}
